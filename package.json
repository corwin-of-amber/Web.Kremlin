{
  "name": "nwjs-kremlin",
  "version": "0.1.1",
  "description": "Zero-config build & bundle for ES6+ systems",
  "repository": {
    "type": "git",
    "url": "github:corwin-of-amber/nwjs-kremlin"
  },
  "license": "MIT",
  "main": "index.js",
  "bin": {
    "kremlin": "build/kremlin/cli.js"
  },
  "files": [
    "build/kremlin/cli.js",
    "build/kremlin/plug.js",
    "index.js",
    "reload.js",
    "tsconfig.json",
    "src",
    "addons"
  ],
  "dependencies": {
    "acorn": "^8.7.1",
    "acorn-globals": "github:corwin-of-amber/acorn-globals",
    "acorn-loose": "^8.3.0",
    "acorn-walk": "^8.2.0",
    "chokidar": "^3.4.1",
    "coffeescript": "^2.5.1",
    "commander": "^6.0.0",
    "find-up": "^4.1.0",
    "glob": "^7.1.6",
    "jison": "^0.4.18",
    "jquery": "^3.5.1",
    "livescript": "^1.6.0",
    "lodash": "^4.17.19",
    "mkdirp": "^1.0.4",
    "nanoid": "^3.1.22",
    "nearley": "^2.19.5",
    "parse5": "^6.0.0",
    "postcss": "^8.4.12",
    "prelude-ls": "^1.2.1",
    "resolve.exports": "^2.0.2",
    "sass": "^1.52.3",
    "strip-comments": "^2.0.1",
    "typescript": "^4.8.4",
    "underscore": "^1.10.2",
    "walk-parse5": "^2.0.0",
    "which": "^2.0.2",
    "zone.js": "^0.11.4"
  },
  "scripts": {
    "prepare": "( cd shim && npm install ) && ( cd addons && npm install )",
    "bootstrap": "npx tsc --project . --module commonjs --outDir build/boot && node build/boot/cli --node src/cli.ts src/plug.ts",
    "build": "node build/kremlin/cli.js --node src/cli.ts src/plug.ts",
    "build+gui": "node build/kremlin/cli.js --node index.html src/cli.ts src/plug.ts",
    "watch": "node build/kremlin/cli.js --node --watch src/cli.ts src/plug.ts",
    "dist": "mkdir -p dist && cd dist && npm pack ../addons/vue/v2 ../addons/vue/v3 ..",
    "start": "nw .&"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.0",
    "@types/lodash": "^4.14.158",
    "@types/minimatch": "^3.0.5",
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^20.14.10",
    "@types/parse5": "^5.0.3",
    "tsx": "^4.17.0"
  },
  "browserslist": [
    "Chrome 80"
  ],
  "kremlin": {
    "ignore": [
      "tmp"
    ]
  },
  "app": {
    "main": "build/kremlin/index.html"
  }
}
